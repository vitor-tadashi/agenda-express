<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

	<persistence-unit name="agendaExpressPersistenceUnit"
		transaction-type="RESOURCE_LOCAL">

		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>jndi/DS_agenda_express</jta-data-source>
		<class>br.com.agendaexpress.entity.AgendaEntity</class>
		<class>br.com.agendaexpress.entity.AvaliacaoEntity</class>
		<class>br.com.agendaexpress.entity.ContatoEntity</class>
		<class>br.com.agendaexpress.entity.EnderecoEntity</class>
		<class>br.com.agendaexpress.entity.FeriadoEntity</class>
		<class>br.com.agendaexpress.entity.FuncionalidadeEntity</class>
		<class>br.com.agendaexpress.entity.PerfilEntity</class>
		<class>br.com.agendaexpress.entity.PessoaEntity</class>
		<class>br.com.agendaexpress.entity.PessoaFisicaEntity</class>
		<class>br.com.agendaexpress.entity.PessoaJuridicaEntity</class>
		<class>br.com.agendaexpress.entity.RecomendacaoEntity</class>
		<class>br.com.agendaexpress.entity.SeguidorEntity</class>
		<class>br.com.agendaexpress.entity.TipoCompromissoEntity</class>
		<class>br.com.agendaexpress.entity.UsuarioEntity</class>

		<properties>
			<property name="hibernate.connection.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="none" />
			<property name="hibernate.connection.driver_class" value="oracle.jdbc.driver.OracleDriver" />
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>
